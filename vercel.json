{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["syd1", "mel1"],
  "crons": [
    {
      "path": "/api/cron/cleanup-notices",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/update-voting-powers",
      "schedule": "0 0 * * 1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_Management_Name": "Hadi&Co.",
    "DATABASE_URL": "@database-url",
    "JWT_SECRET": "@jwt-secret"
  }
} 